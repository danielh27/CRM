<div class="container form-session-container">
  <div class="bg-white rounder form-session-card">
    <h2><strong>Iniciar sesion</strong></h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Correo",
                    placeholder: "usuario@ejemple.com",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <%= f.input :password,
                    label: "ContraseÃ±a",
                    placeholder: "12345678",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions ">
        <%= f.button :submit, "Iniciar sesion", class:"text-white btn bg-green" %>
      </div>
    <% end %>
  </div>
</div>
